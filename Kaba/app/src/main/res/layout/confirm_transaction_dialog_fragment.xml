<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/confirm_transaction_width"
        android:layout_height="@dimen/confirm_transaction_width"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/placeholder_kaba" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/food_tag_sample"
        android:textAlignment="center"
        android:layout_margin="@dimen/food_details_tag_margin"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeStepGranularity="1sp"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/confirm_transaction_bt_background_gray"
        android:paddingTop="@dimen/food_details_tag_padding_vertical"
        android:paddingBottom="@dimen/food_details_tag_padding_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal"
            android:text="Selectionner l'Adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeStepGranularity="1sp"
            />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/ic_confirm_downward_size"
            android:layout_height="@dimen/ic_confirm_downward_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_downward_direction"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/confirm_transaction_bt_background_gray"
        android:paddingTop="@dimen/food_details_tag_padding_vertical"
        android:paddingBottom="@dimen/food_details_tag_padding_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal"
            android:text="Selectionner le BON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeStepGranularity="1sp"
            />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/ic_confirm_downward_size"
            android:layout_height="@dimen/ic_confirm_downward_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_downward_direction"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.CheckBox"
            android:text="Payer Ã  l'Arriver"
            android:checked="true"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/ic_command_right_way_size"
        android:layout_height="@dimen/ic_command_right_way_size"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/icon_commander"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

</LinearLayout>